<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MockedClient" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Text sizes -->
        <item name="android:textAppearance">@style/NormalTextSize</item>
        <item name="android:textAppearanceLarge">@style/NormalTextSize.Large</item>
        <item name="android:textAppearanceMedium">@style/NormalTextSize.Medium</item>
        <item name="android:textAppearanceSmall">@style/NormalTextSize.Small</item>
        <item name="android:editTextStyle">@style/EditText_NormalTextSize</item>

    </style>

    <!-- HIGH CONTRAST THEME -->
    <style name="HighContrast" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Custom colors -->
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_grey</item>
        <!-- Text sizes -->
        <item name="android:textAppearance">@style/BigTextSize</item>
        <item name="android:textAppearanceLarge">@style/BigTextSize.Large</item>
        <item name="android:textAppearanceMedium">@style/BigTextSize.Medium</item>
        <item name="android:textAppearanceSmall">@style/BigTextSize.Small</item>
        <item name="android:editTextStyle">@style/EditText_BigTextSize</item>
    </style>

    <style name="Theme.MockedClient.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MockedClient.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MockedClient.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>